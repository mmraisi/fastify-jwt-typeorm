{
	"name": "node-template-ts",
	"version": "1.0.0",
	"description": "nodejs typescript template",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"author": "Mahmoud Mraisi",
	"repository": {
		"type": "git",
		"url": "https://github.com/mmraisi/node-template-ts"
	},
	"bugs": {
		"url": "https://github.com/mmraisi/node-template-ts/issues"
	},
	"scripts": {
		"lint": "eslint .",
		"start": "ts-node src/index.ts",
		"build": "rm -rf dist && tsc --build",
		"dev": "nodemon src/index.ts",
		"test": "npm run lint && vitest . --coverage",
		"test:ci": "npm run lint && vitest . --coverage  --watch=false"
	},
	"keywords": [
		"orm",
		"jwt",
		"fastify",
		"openAPI"
	],
	"license": "MIT",
	"dependencies": {
		"@fastify/static": "^5.0.0",
		"@fastify/swagger": "^7.6.1",
		"dotenv": "^16.4.5",
		"fastify": "^4.26.2",
		"oas-fastify": "^3.1.0",
		"pg": "^8.4.0",
		"reflect-metadata": "^0.1.14",
		"typeorm": "^0.3.20"
	},
	"devDependencies": {
		"@semantic-release/github": "^10.0.2",
		"@semantic-release/release-notes-generator": "^12.1.0",
		"@types/node": "^20.11.27",
		"@types/pg": "^8.11.4",
		"@typescript-eslint/eslint-plugin": "^7.4.0",
		"@typescript-eslint/parser": "^7.2.0",
		"@vitest/coverage-v8": "^1.4.0",
		"eslint": "^8.57.0",
		"nodemon": "^3.1.0",
		"semantic-release": "^23.0.5",
		"ts-node": "^10.9.2",
		"typescript": "^5.4.2",
		"vitest": "^1.4.0"
	}
}
